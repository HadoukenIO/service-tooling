    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "FDC3 Sandbox",
            "program": "${workspaceFolder}/dist/cli.js",
            "cwd": "${workspaceFolder}/../fdc3-service",
            "args": ["sandbox", "--client", "alpha"],
            "preLaunchTask": "build-debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "FDC3 ASAR",
            "program": "${workspaceFolder}/dist/cli.js",
            "cwd": "${workspaceFolder}/../fdc3-service",
            "args": ["asar"],
            "preLaunchTask": "build-debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "FDC3 Start",
            "program": "${workspaceFolder}/dist/cli.js",
            "cwd": "${workspaceFolder}/../fdc3-service",
            "args": ["start", "-w"],
            "preLaunchTask": "build-debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "OFD Start",
            "program": "${workspaceFolder}/dist/cli.js",
            "cwd": "${workspaceFolder}/../os-launchpad",
            "args": ["start"],
            "preLaunchTask": "build-debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "OFD Build",
            "program": "${workspaceFolder}/dist/cli.js",
            "cwd": "${workspaceFolder}/../os-launchpad",
            "args": ["build"],
            "preLaunchTask": "build-debug"
        }
    ]
}